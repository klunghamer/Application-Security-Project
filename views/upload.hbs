<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <header>
      <div class="sign-out">
        {{#if user}}
        <form action="/signout?_method=DELETE" method="POST">
          <input type="hidden" name="_csrf" value="{{token}}">
          <button type="submit" name="submit" class="signout">Log Out</button>
        </form>
        {{else}}
        {{/if}}
      </div>
      <h1 class="main-header">Spellchecker</h1>
    </header>
      {{#if user.file}}
        <form action="/download" method="GET">
          <input type="hidden" name="_csrf" value="{{token}}">
          <button type="submit" name="submit" class="signout">You have a saved file. Click to download.</button>
        </form>
      {{else}}
        <form ref='uploadForm'
          id='uploadForm'
          action='/upload?_csrf={{token}}'
          method='post'
          encType="multipart/form-data">
            <input type="file" name="newFile" accept="text/*"/>
            <input type='submit' value='Download spellchecked file!' />
        </form> {{#if size}}<span>File too large. Please upload again.</span>{{/if}}
      {{/if}}
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
      <form action="/again">
          <input type="submit" value="Spellcheck another file" />
      </form>
  </body>
</html>
